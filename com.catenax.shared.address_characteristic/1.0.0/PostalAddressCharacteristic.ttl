@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix bamm: <urn:bamm:io.openmanufacturing:meta-model:1.0.0#>.
@prefix unit: <urn:bamm:io.openmanufacturing:unit:1.0.0#>.
@prefix bamm-c: <urn:bamm:io.openmanufacturing:characteristic:1.0.0#>.
@prefix bamm-e: <urn:bamm:io.openmanufacturing:entity:1.0.0#>.
@prefix : <urn:bamm:com.catenax.shared.address_characteristic:1.0.0#>.

:AddressAspect a bamm:Aspect;
    bamm:name "AddressAspect";
    bamm:preferredName "Address Aspect"@en;
    bamm:description "Aspect used for the Characteristic :PostalAddress to reference adress data"@en;
    bamm:properties (:address);
    bamm:operations ().
:address a bamm:Property;
    bamm:name "address";
    bamm:preferredName "Adress"@en;
    bamm:description "the adress of the data provider"@en;
    bamm:characteristic :PostalAddress.
:PostalAddress a bamm:Characteristic;
    bamm:name "PostalAddress";
    bamm:description "A characteristic to express the postal adress and which is intended to be referenced by other aspects"@en;
    bamm:dataType :AddressEntity.
:AddressEntity a bamm:Entity;
    bamm:name "AddressEntity";
    bamm:properties (:thoroughFare :streetNumber :postCode :city [
  bamm:property :isDataComplete;
  bamm:optional "true"^^xsd:boolean
] [
  bamm:property :siteName;
  bamm:optional "true"^^xsd:boolean
] [
  bamm:property :gate;
  bamm:optional "true"^^xsd:boolean
] :country).
:thoroughFare a bamm:Property;
    bamm:name "thoroughFare";
    bamm:preferredName "ThoroughFare"@en;
    bamm:description "Street or thorough road name"@en;
    bamm:characteristic bamm-c:Text;
    bamm:exampleValue "Bernstra√üe".
:streetNumber a bamm:Property;
    bamm:name "streetNumber";
    bamm:preferredName "Street Number"@en;
    bamm:description "Number describing where a building is located on a street. As used differently in international context, this number can contain both numerical and alphanumerical values"@en;
    bamm:characteristic bamm-c:Text;
    bamm:exampleValue "45".
:postCode a bamm:Property;
    bamm:name "postCode";
    bamm:preferredName "Post Code"@en;
    bamm:description "The postal or zip code"@en;
    bamm:characteristic :PostCodeTrait;
    bamm:exampleValue "68161/12".
:isDataComplete a bamm:Property;
    bamm:name "isDataComplete";
    bamm:preferredName " is data complete"@en;
    bamm:description "Is the preceeding informationn is complete (true) or unknown (false)"@en;
    bamm:characteristic bamm-c:Boolean.
:siteName a bamm:Property;
    bamm:name "siteName";
    bamm:preferredName "Site Name"@en;
    bamm:description "Designation of a site"@en;
    bamm:characteristic bamm-c:Text;
    bamm:exampleValue "Werk 1".
:gate a bamm:Property;
    bamm:name "gate";
    bamm:preferredName "Gate"@en;
    bamm:description "Designation of a gate"@en;
    bamm:characteristic bamm-c:Text;
    bamm:exampleValue "Tor 1".
:country a bamm:Property;
    bamm:name "country";
    bamm:preferredName "Country"@en;
    bamm:description "Country of an address"@en;
    bamm:characteristic :CountryTrait;
    bamm:exampleValue "DE-NI".
:PostCodeTrait a bamm-c:Trait;
    bamm:name "PostCodeTrait";
    bamm-c:baseCharacteristic bamm-c:Text;
    bamm-c:constraint :PostCodeConstraint.
:PostCodeConstraint a bamm-c:RegularExpressionConstraint;
    bamm:name "PostCodeConstraint";
    bamm:preferredName "Post Code Constraint"@en;
    bamm:description "Regular expression for post codes"@en;
    bamm:value "^[0-9]{5}$".
:CountryTrait a bamm-c:Trait;
    bamm:name "CountryTrait";
    bamm-c:baseCharacteristic :CountryCharacteristic;
    bamm-c:constraint :CountryConstraint.
:CountryCharacteristic a bamm:Characteristic;
    bamm:name "CountryCharacteristic";
    bamm:preferredName "Country Characteristic"@en;
    bamm:description "Characteristic for a country belonging to an address"@en;
    bamm:dataType xsd:string.
:CountryConstraint a bamm-c:RegularExpressionConstraint;
    bamm:name "CountryConstraint";
    bamm:preferredName "CountryConstraint"@en;
    bamm:description "Regular expression for designation of a country as defined in ISO 3166-2"@en;
    bamm:value "([A-Z]{2}-[A-Z0-9]{1,3}|)";
    bamm:see <https%253A%252F%252Fwww.iso.org%252Fiso-3166-country-codes.html>.
:city a bamm:Property;
    bamm:name "city";
    bamm:preferredName "City"@en;
    bamm:description "City belonging to the address"@en;
    bamm:characteristic bamm-c:Text;
    bamm:exampleValue "Mannheim".
