@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix bamm: <urn:bamm:io.openmanufacturing:meta-model:1.0.0#>.
@prefix unit: <urn:bamm:io.openmanufacturing:unit:1.0.0#>.
@prefix bamm-c: <urn:bamm:io.openmanufacturing:characteristic:1.0.0#>.
@prefix bamm-e: <urn:bamm:io.openmanufacturing:entity:1.0.0#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix : <urn:bamm:com.catenax.idconversion:0.1.0#>.

:IdConversion a bamm:Aspect;
bamm:name "IdConversion";
bamm:properties ();
bamm:operations ( :Convert );
bamm:description "The IdConversion aspect deals with the Conversion of (vehicle) Identifiers like VINs to Pseudonyms in an OEM domain (VANs, UUIDs and other concepts) and vice versa. As there are multiple options for representing Identifiers and performing Pseudonymization, this model use a key/value pairs."@en;
bamm:preferredName "Id Conversion"@en.

:Convert a bamm:Operation;
bamm:name "Convert";
bamm:preferredName "Convert"@en;
bamm:description "The Convert operation converts from Identifiers or Pseudonyms into Pseudonyms or Identifiers of the respective domains."@en;
bamm:input (:conversionSpecification);
bamm:output :conversionSpecification .

:conversionSpecification a bamm:Property;
bamm:name "conversionSpecification";
bamm:preferredName "Conversion Specification"@en;
bamm:description "The Conversion Specification is used both as input or output to the Convert operation and hence contains either a set of identifiers or pseudonyms depending on the direction of the conversion and usage of the property."@en;
bamm:characteristic :QualifiedIdentifierBatch .

:QualifiedIdentifierBatch a bamm-c:Either;
bamm:name "QualifiedIdentifierBatch" ;
bamm:description "A qualified batch of Identifiers and Pseudonyms can use one of two representations. Either using a fixed domain/key and local values or using fully qualified Identifiers."@en;
bamm-c:left :QualifiedIdentifierList;
bamm-c:right :AQualifiedBatchIdentifiers .

:AQualifiedBatchIdentifiers a bamm:Characteristic ;
bamm:dataType :QualifiedBatchIdentifiers .

:QualifiedBatchIdentifiers a bamm:Entity ;
bamm:name "QualifiedBatchIdentifiers" ;
bamm:preferredName "Qualified Batch of Identifiers"@en ;
bamm:description "A list of unqualified identifiers all belonging to the same domain/key."@en ;
bamm:properties (:key :identifiers).

:QualifiedIdentifierList a bamm-c:List ;
bamm:name "QualifiedIdentifierList" ;
bamm:preferredName "Qualified Identifiers List"@en ;
bamm:description "A list of qualified identifiers."@en ;
bamm:dataType :QualifiedIdentifier .

:QualifiedIdentifier a bamm:Entity;
bamm:name "QualifiedIdentifier";
bamm:description "The qualified Identifier is an entity for the qualified input and output of a conversion. It has a namespace (key) and a local name (value) component."@en;
bamm:properties (:key :value) .

:Urn a bamm:Characteristic;
bamm:name "Urn";
bamm:preferredName "Unique Resource Name (URN)"@en;
bamm:description "A unique resource name."@en;
bamm:dataType xsd:anyURI .

:key a bamm:Property;
bamm:name "key";
bamm:description "The key hints to the type (identifier of a specific origin, pseudonym of a given domain)."@en;
bamm:exampleValue "urn:standard:org.iso:9721#"^^xsd:anyURI;
bamm:characteristic :Urn .

:ID a bamm:Characteristic;
bamm:name "ID";
bamm:preferredName "Identifier"@en;
bamm:description "An (unqualified) identifier."@en;
bamm:dataType xsd:string.

:value a bamm:Property;
bamm:name "value";
bamm:description "The value property is either a local identifier or pseudonym. The format and type of the value depends on the key property."@en;
bamm:exampleValue "2HNYD28297H520948";
bamm:characteristic :ID .

:IDList a bamm-c:List ;
bamm:name "IDList" ;
bamm:preferredName "ID List"@en ;
bamm:description "A list of unqualified identifiers."@en ;
bamm:dataType :ID .

:identifiers a bamm:Property;
bamm:name "identifiers";
bamm:description "A list of (unqualified) identifiers or pseudonyms. The format and type of the value depends on the key property."@en;
bamm:characteristic :IDList .
