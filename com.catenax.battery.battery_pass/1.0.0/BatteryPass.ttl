@prefix bamm: <urn:bamm:io.openmanufacturing:meta-model:1.0.0#>.
@prefix bamm-c: <urn:bamm:io.openmanufacturing:characteristic:1.0.0#>.
@prefix bamm-e: <urn:bamm:io.openmanufacturing:entity:1.0.0#>.
@prefix unit: <urn:bamm:io.openmanufacturing:unit:1.0.0#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix : <urn:bamm:io.openmanufacturing.digitaltwin:1.0.0#>.

:BatteryPass a bamm:Aspect;
    bamm:name "BatteryPass";
    bamm:properties (:passportNumber :passportIssuer :dateOfManufacture :hasEuConformationCertificate :nameOfManufacturer :websiteOfManufacturer :brand);
    bamm:operations ();
    bamm:preferredName "battery pass"@en;
    bamm:description "The battery pass describes information collected during the lifecycle of a battery"@en;
    bamm:see <https%25253A%25252F%25252Feur-lex.europa.eu%25252Flegal-content%25252FEN%25252FTXT%25252F%25253Furi%25253DCELEX%2525253A52020PC0798>.
:passportNumber a bamm:Property;
    bamm:name "passportNumber";
    bamm:preferredName "passport number"@en;
    bamm:description "The unique passport number of the battery"@en;
    bamm:characteristic bamm-c:Text.
:passportIssuer a bamm:Property;
    bamm:name "passportIssuer";
    bamm:preferredName "passport issuer"@en;
    bamm:description "Name of the issuer of the battery passport"@en;
    bamm:characteristic bamm-c:Text.
:dateOfManufacture a bamm:Property;
    bamm:name "dateOfManufacture";
    bamm:preferredName "date of manufacture"@en;
    bamm:description "Manufacturing date of the battery"@en;
    bamm:characteristic :DateOfManufacture;
    bamm:exampleValue "07.03.2022"^^xsd:date.
:hasEuConformationCertificate a bamm:Property;
    bamm:name "hasEuConformationCertificate";
    bamm:preferredName "has EU conformation certificate"@en;
    bamm:description "If the manufacturer has provided a certificate of conformity with European health, safety, and environmental protection standards then the battery is able to receive the CE mark."@en;
    bamm:characteristic :HasEuConformationCertificate;
    bamm:exampleValue "true"^^xsd:boolean.
:nameOfManufacturer a bamm:Property;
    bamm:name "nameOfManufacturer";
    bamm:preferredName "name of manufacturer"@en;
    bamm:description "Name of battery manufacturer"@en;
    bamm:characteristic :Text;
    bamm:exampleValue "Samsung".
:websiteOfManufacturer a bamm:Property;
    bamm:name "websiteOfManufacturer";
    bamm:preferredName "website of manufacturer"@en;
    bamm:description "Website of the battery manufacturer."@en;
    bamm:characteristic :WebsiteOfManufacturer.
:DateOfManufacture a bamm:Characteristic;
    bamm:name "DateOfManufacture";
    bamm:preferredName "date of manufacture"@en;
    bamm:dataType xsd:date.
:HasEuConformationCertificate a bamm:Characteristic;
    bamm:name "HasEuConformationCertificate";
    bamm:preferredName "has EU conformation certificate"@en;
    bamm:dataType xsd:boolean.
:Text a bamm:Characteristic;
    bamm:name "Text";
    bamm:description "Describes a Property which contains plain text. This is intended exclusively for human readable strings, not for identifiers, measurement values, etc."@en;
    bamm:dataType xsd:string.
:brand a bamm:Property;
    bamm:name "brand";
    bamm:preferredName "brand"@en;
    bamm:characteristic :Text.
:WebsiteOfManufacturer a bamm:Characteristic;
    bamm:name "WebsiteOfManufacturer";
    bamm:preferredName "manufacturer website"@en;
    bamm:see <https%3A%2F%2Fwww.samsung.com>;
    bamm:dataType xsd:anyURI.
